{
  "name": "@life/types",
  "version": "0.1.0",
  "description": "Shared TypeScript types, schemas, and utilities for the Life app monorepo",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js",
      "require": "./dist/schemas/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint .",
    "check": "biome check .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:types": "tsc --noEmit",
    "typecheck": "tsc --noEmit --strict",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
