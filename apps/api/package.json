{
  "name": "@life/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "cd ../.. && biome lint apps/api",
    "check": "cd ../.. && biome check apps/api",
    "format": "cd ../.. && biome format --write apps/api",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --config vitest.config.ts --reporter=verbose"
  },
  "dependencies": {
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/swagger": "^9.0.0",
    "@supabase/supabase-js": "^2.49.4",
    "zod": "^3.22.0",
    "dotenv": "^16.3.0",
    "@life/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.6.0",
    "supertest": "^7.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3",
    "vitest": "^1.0.0"
  }
}
