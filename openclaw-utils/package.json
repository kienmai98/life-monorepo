{
  "name": "openclaw-workspace-utils",
  "version": "1.0.0",
  "description": "Utility scripts for OpenClaw workspace management",
  "scripts": {
    "oc:status": "openclaw status",
    "oc:restart": "openclaw restart",
    "oc:doctor": "openclaw doctor",
    "oc:config": "cat ~/.openclaw/openclaw.json | jq",
    "workspace:clean": "find ~/.openclaw/workspace -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null; echo 'Cleaned node_modules'",
    "workspace:backup": "tar -czf backup-$(date +%Y%m%d).tar.gz -C ~/.openclaw workspace",
    "sessions:list": "ls -la ~/.openclaw/agents/main/sessions/",
    "sessions:clean": "rm -f ~/.openclaw/agents/main/sessions/*.jsonl",
    "models:list": "cat ~/.openclaw/agents/main/agent/models.json | jq -r '.models | keys[]' 2>/dev/null || echo 'No models config'",
    "gateway:log": "tail -f ~/.openclaw/gateway.log"
  }
}
